{{!
    @template core_course/completion_automatic

    Template for displaying an automatic completion rule and its status.

    Example context (json):
    {
        "statuscomplete": 1,
        "description": "View",
        "istrackeduser": true,
        "accessibledescription": "Done: View (Set by Admin User)"
    }
}}
{{#istrackeduser}}
    {{#statussubmitted}}
    <span class="badge badge-pill alert-warning icon-no-margin" role="listitem">
        {{#pix}}i/hide{{/pix}}
        <strong>{{#str}}submitted, format_roc2023{{/str}}</strong> <span class="font-weight-normal">{{description}}</span>
    </span>
    {{/statussubmitted}}
{{/istrackeduser}}
{{^istrackeduser}}
    <span class="badge badge-pill badge-light" role="listitem">
        <span class="font-weight-normal">{{description}}</span>
    </span>
{{/istrackeduser}}
